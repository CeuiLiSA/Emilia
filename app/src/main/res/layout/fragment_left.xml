<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/top_parent"
        android:layout_height="match_parent">


        <ceuilisa.mirai.utils.TouchStopViewPager
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/view_pager"
            android:layout_height="140dp">



        </ceuilisa.mirai.utils.TouchStopViewPager>




        <ImageView
            android:id="@+id/img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_music_note_black_24dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_pager" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="每日推荐"
            android:textColor="#333333"
            android:textSize="@dimen/sixteen_sp"
            app:layout_constraintBottom_toBottomOf="@+id/devider_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/img_1"
            app:layout_constraintStart_toEndOf="@+id/img_1"
            app:layout_constraintTop_toBottomOf="@+id/view_pager"
            app:layout_constraintVertical_bias="0.5" />


        <View
            android:id="@+id/devider_1"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:background="@color/back_ground"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/img_1" />


        <ImageView
            android:id="@+id/img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:src="@drawable/ic_file_download_black_24dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/devider_1" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:gravity="center_vertical"
            android:text="本地音乐"
            android:textColor="#333333"
            android:textSize="@dimen/sixteen_sp"
            app:layout_constraintBottom_toBottomOf="@+id/devider_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_2"
            app:layout_constraintStart_toEndOf="@+id/img_2"
            app:layout_constraintTop_toBottomOf="@+id/devider_1" />


        <View
            android:id="@+id/devider_2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:background="@color/back_ground"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/img_2" />

        <ImageView
            android:id="@+id/img_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:src="@drawable/ic_fiber_new_black_24dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/devider_2" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:gravity="center_vertical"
            android:text="新歌速递"
            android:textColor="#333333"
            android:textSize="@dimen/sixteen_sp"
            app:layout_constraintBottom_toBottomOf="@+id/devider_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_3"
            app:layout_constraintStart_toEndOf="@+id/img_3"
            app:layout_constraintTop_toBottomOf="@+id/devider_2" />

        <View
            android:id="@+id/devider_3"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:background="@color/back_ground"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/img_3" />

        <ImageView
            android:id="@+id/img_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:src="@drawable/ic_music_video_black_24dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/devider_3" />


        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:text="歌单分类"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:textColor="#333333"
            android:textSize="@dimen/sixteen_sp"
            app:layout_constraintBottom_toBottomOf="@+id/devider_4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_4"
            app:layout_constraintStart_toEndOf="@+id/img_4"
            app:layout_constraintTop_toBottomOf="@+id/devider_3" />

        <View
            android:id="@+id/devider_4"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:background="@color/back_ground"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/img_4" />

        <ImageView
            android:id="@+id/img_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:src="@drawable/ic_favorite_black_24dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/devider_4" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:gravity="center_vertical"
            android:text="我的歌单"
            android:textColor="#333333"
            android:textSize="@dimen/sixteen_sp"
            app:layout_constraintBottom_toBottomOf="@+id/devider_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_5"
            app:layout_constraintTop_toBottomOf="@+id/devider_4" />

        <View
            android:id="@+id/devider_5"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:background="@color/back_ground"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/img_5" />

        <ImageView
            android:id="@+id/img_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:src="@drawable/ic_queue_music_black_24dp"
            android:tint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/devider_5" />


        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/sixteen_dp"
            android:gravity="center_vertical"
            android:text="推荐歌单"
            android:textColor="#333333"
            android:textSize="@dimen/sixteen_sp"
            app:layout_constraintBottom_toBottomOf="@+id/devider_6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img_6"
            app:layout_constraintStart_toEndOf="@+id/img_6"
            app:layout_constraintTop_toBottomOf="@+id/devider_5" />


        <View
            android:id="@+id/devider_6"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:background="@color/back_ground"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/img_6" />

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
