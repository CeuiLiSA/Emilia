<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lrc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <me.wcy.lrcview.LrcView
        android:id="@+id/lrc_view_full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        lrc:lrcAnimationDuration="1000"
        lrc:lrcCurrentTextColor="@color/colorPrimary"
        lrc:lrcDividerHeight="24dp"
        lrc:lrcNormalTextColor="@color/white"
        lrc:lrcPadding="40dp"
        lrc:lrcTextSize="@dimen/sixteen_sp"
        lrc:lrcTimelineColor="#80FFFFFF"
        lrc:lrcTimelineTextColor="#b39ddb" />
</LinearLayout>